<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <!-- Layout principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple">

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/relativeLayoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tituloHeaderApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ShareList"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_alignParentStart="true"/>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/tituloHeaderApp"
                android:layout_marginTop="8dp"
                android:background="@color/light_gray"/>
        </RelativeLayout>

        <!-- Container para os botões superiores -->
        <LinearLayout
            android:id="@+id/containerTopButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/relativeLayoutHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Criar Lista -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <!-- Conteúdo omitido para manter o exemplo original -->
            </LinearLayout>

            <!-- Logout -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnLogout"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_logout"
                    android:tint="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>

            <!-- Perfil -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <!-- Conteúdo omitido para manter o exemplo original -->
            </LinearLayout>
        </LinearLayout>

        <!-- RecyclerView para exibir listas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewLista"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            android:background="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@id/containerTopButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Botão Flutuante -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnFlutuanteAdd"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:translationY="-50dp"
            android:src="@drawable/ic_add"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/color_default" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
